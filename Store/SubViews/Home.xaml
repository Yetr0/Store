<UserControl x:Class="Store.SubViews.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Store.SubViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden" ScrollBar.Scroll="ScrollViewer_Scroll">
            <StackPanel Orientation="Horizontal" Name="StackPanel">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="20,0,0,0"/>
                    </Style>
                </StackPanel.Resources>

                <Image Source="https://upload.wikimedia.org/wikipedia/commons/e/ec/RandomBitmap.png"></Image>
                <Image Source="https://upload.wikimedia.org/wikipedia/commons/e/ec/RandomBitmap.png"></Image>
                <Image Source="https://upload.wikimedia.org/wikipedia/commons/e/ec/RandomBitmap.png"></Image>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
